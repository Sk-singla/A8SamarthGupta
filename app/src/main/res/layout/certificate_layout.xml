<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/certificateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/deleteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="@id/certificateTxt"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/certificateNameEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certificate Name"
        app:layout_constraintTop_toBottomOf="@id/certificateTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/certificateLinkEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certificate Link"
        app:layout_constraintTop_toBottomOf="@id/certificateNameEdt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>